<form class="d-inline-block" method="post" action="{{ path('reservation_delete', {'id': reservation.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reservation.id) }}">
    <button class="btn btn-sm btn-neutral"><i class="far fa-trash-alt"></i> {{ 'Delete Reservation'|trans }}</button>
</form>
